/* ------------------------------------------------------------------------------------ */
lab_x: [-1,0,1,2];
m0: 3;
b0: 5;
lab_y: m0*lab_x+b0;

lab_xe: lab_x + [0,0,0.1,0];
lab_ye: lab_y + [0,0.1,-0.1,0];

fit, n=4,\
  SXY= sum(lab_xe[i]*lab_ye[i],i,1,n),\
  SX= sum(lab_xe[i],i,1,n),\
  SY= sum(lab_ye[i],i,1,n),\
  SX2= sum(lab_xe[i]^2,i,1,n),\
  SY2= sum(lab_ye[i]^2,i,1,n);

